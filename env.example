# REQUIRED: xAI API Key (get from console.x.ai)
XAI_API_KEY=xai-YOUR_ACTUAL_API_KEY_HERE

# Model configuration
# Available models: grok-2-1212, grok-2-vision-1212, grok-beta
GROK_MODEL=grok-2-1212

# API configuration
GROK_BASE_URL=https://api.x.ai/v1
GROK_TIMEOUT=60
GROK_MAX_RETRIES=3

# Default generation parameters
GROK_DEFAULT_TEMPERATURE=0.7
GROK_DEFAULT_MAX_TOKENS=1000

# Debug mode (set to true for verbose logging)
GROK_DEBUG=false